<div class="container">
<h2>Редактировать профиль</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="form-group">
      <%= f.label :name, 'Имя' %><br />
      <%= f.text_field :name, required: true %>
    </div>



  <div class="field">
    <%= f.label :password, 'Пароль' %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> символов минимум</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Подтвердите пароль' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, 'Текущий пароль' %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить", class: 'btn btn-success mt-3', style: 'border-radius: 18px; width: 20%' %>
  </div>
<% end %>

</div>